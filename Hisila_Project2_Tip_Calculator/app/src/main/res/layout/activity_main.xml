<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/bill_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="70dp"
            android:text="Enter Bill Amount"
            android:minHeight="48dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="LabelFor,MissingConstraints,VisualLintTextFieldSize"
            android:autofillHints=""
            android:inputType="numberDecimal" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tipButtonOne"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="53dp"
            android:text='15%'
            tools:text="15%"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bill_amount"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tipButtonTwo"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="53dp"
            android:text='18%'
            app:layout_constraintLeft_toRightOf="@+id/tipButtonOne"
            app:layout_constraintTop_toBottomOf="@+id/bill_amount"
            tools:ignore="MissingConstraints"
            tools:text="18%" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tipButtonThree"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="53dp"
            android:text='20%'
            app:layout_constraintLeft_toRightOf="@+id/tipButtonTwo"
            app:layout_constraintTop_toBottomOf="@+id/bill_amount"
            tools:ignore="MissingConstraints"
            tools:text="20%" />

        <TextView
            android:id="@+id/total_amount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="76dp"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="36dp"
            android:text="Tip $99.99, Total Bill: $99.99"
            tools:text="Tip $99.99, Total Bill: $99.99"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/tipButtonOne"
            tools:ignore="DuplicateIds,MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

